<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="6dp"
        android:height="6dp"
        android:bottom="2dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45">
            <shape android:shape="oval">
                <gradient
                    android:angle="180"
                    android:endColor="@color/side_panel_background_color"
                    android:startColor="@color/side_panel_background_color"
                    android:type="linear" />
            </shape>
        </rotate>
    </item>
    <item
        android:width="3dp"
        android:height="6dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/side_panel_background_color"
                android:startColor="@color/side_panel_background_color"
                android:type="linear" />
        </shape>
    </item>
</layer-list>