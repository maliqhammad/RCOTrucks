<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_bar_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/white_curved_background_two"
        android:drawableStart="@drawable/ic_search_black_24dp"
        android:drawablePadding="6dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint=""
        android:includeFontPadding="false"
        android:inputType="textNoSuggestions"
        android:paddingStart="6dp"
        android:textColor="@color/black"
        android:textSize="@dimen/rco_trucks_medium_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_clear_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_clear_search"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ic_baseline_close_24"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintEnd_toStartOf="@+id/filter_btn"
        app:layout_constraintTop_toTopOf="@+id/et_search" />

    <ImageView
        android:id="@+id/filter_btn"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:src="@drawable/filter_icon"
        app:tint="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/et_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_search" />



</androidx.constraintlayout.widget.ConstraintLayout>