<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <ImageView
        android:id="@+id/closeCompass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_baseline_close_24"
        app:tint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/compassIcon"
        android:layout_width="0dp"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/degree"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:src="@drawable/compass_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/qiblaIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_44sdp"
        android:layout_marginTop="@dimen/_44sdp"
        android:layout_marginEnd="@dimen/_44sdp"
        android:layout_marginBottom="@dimen/_44sdp"
        android:src="@drawable/qibla"
        app:layout_constraintBottom_toBottomOf="@+id/compassIcon"
        app:layout_constraintEnd_toEndOf="@+id/compassIcon"
        app:layout_constraintStart_toStartOf="@+id/compassIcon"
        app:layout_constraintTop_toTopOf="@+id/compassIcon" />

    <TextView
        android:id="@+id/degree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/proxima_nova_bold"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:text="741852"
        android:textColor="@color/black"
        android:textSize="@dimen/rco_trucks_normal_text_size"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/compassIcon"
        app:layout_constraintStart_toStartOf="@+id/compassIcon"
        app:layout_constraintTop_toBottomOf="@+id/compassIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>