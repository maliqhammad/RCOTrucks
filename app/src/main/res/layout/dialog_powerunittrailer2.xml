<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"

    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="25dp">
    <!--    android:gravity="center_horizontal"-->

    <!--    android:textAppearance="@style/TextAppearance.AppCompat.Small"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/productsans_medium"
        android:text="@string/truck_number"
        android:textColor="@color/black"
        android:textSize="@dimen/rco_trucks_medium_text_size" />


    <!--    xmlns:android="http://schemas.android.com/apk/res/android"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="0dp">

        <AutoCompleteTextView
            android:id="@+id/powerunit_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Unknown"
            android:textSize="@dimen/rco_trucks_medium_text_size" />

        <ImageView
            android:id="@+id/ic_powerunit_dropdown"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:tint="@color/black" />
    </LinearLayout>


    <TextView
        android:id="@+id/ruleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/productsans_medium"
        android:text="Rule"
        android:textColor="@color/black"
        android:textSize="@dimen/rco_trucks_medium_text_size"
        android:visibility="gone" />

    <!--    xmlns:android="http://schemas.android.com/apk/res/android"-->
    <LinearLayout
        android:id="@+id/ruleSpinnerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="0dp"
        android:visibility="gone">

        <AutoCompleteTextView
            android:id="@+id/rule_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:editable="false"
            android:focusable="false"
            android:fontFamily="@font/manrope_regular"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Unknown"
            android:textSize="@dimen/rco_trucks_medium_text_size" />

        <ImageView
            android:id="@+id/ic_rule_dropdown"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:tint="@color/black" />
    </LinearLayout>


    <!--    android:textAppearance="@style/TextAppearance.AppCompat.Small"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/productsans_medium"
        android:text="@string/trailer_number_one"
        android:textColor="@color/black"
        android:textSize="@dimen/rco_trucks_medium_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="0dp">

        <AutoCompleteTextView
            android:id="@+id/trailernumber_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:padding="10dp"
            android:singleLine="true"
            android:text="@string/no_trailer"
            android:textSize="@dimen/rco_trucks_medium_text_size" />

        <ImageView
            android:id="@+id/ic_trailernumber_dropdown"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:tint="@color/black" />
    </LinearLayout>


    <!--    android:textAppearance="@style/TextAppearance.AppCompat.Small"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/productsans_medium"
        android:text="@string/trailer_number_two"
        android:textColor="@color/black"
        android:textSize="@dimen/rco_trucks_medium_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:padding="0dp">

        <AutoCompleteTextView
            android:id="@+id/trailernumber_two_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:padding="10dp"
            android:singleLine="true"
            android:text="@string/no_trailer"
            android:textSize="@dimen/rco_trucks_medium_text_size" />

        <ImageView
            android:id="@+id/ic_trailernumber_two_dropdown"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:tint="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_powerunittrailer_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/productsans_medium"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/rco_trucks_medium_text_size"

            />

        <Button
            android:id="@+id/bt_powerunittrailer_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/productsans_medium"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/rco_trucks_medium_text_size" />
    </LinearLayout>
</LinearLayout>