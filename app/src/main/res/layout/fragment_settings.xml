<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/driverCoDriverLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_and_black"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/driver_section"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="start|center_vertical"
                android:text="@string/driver_current_eld_account"
                android:textColor="@color/dark_mode_default_color_title"
                android:textSize="@dimen/rco_trucks_normal_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/driverGroupLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/background_curved_default_dark_mode"
                android:elevation="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/driver_section">

                <TextView
                    android:id="@+id/first_name"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"

                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/first_name"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/last_name"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/last_name"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/first_name" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/grey_and_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/first_name" />

                <TextView
                    android:id="@+id/zip_code"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/zip_code"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/last_name" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/grey_and_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/last_name" />

                <TextView
                    android:id="@+id/state"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/state"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/zip_code" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/grey_and_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/zip_code" />

                <TextView
                    android:id="@+id/exempt"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/exempt"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/state" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/grey_and_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/state" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/grey_and_white"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/exempt" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/eld_section"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="start|center_vertical"
                android:text="@string/eld"
                android:textColor="@color/dark_mode_default_color_title"
                android:textSize="@dimen/rco_trucks_normal_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/driverGroupLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/eldGroupLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/background_curved_default_dark_mode"
                android:elevation="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eld_section">

                <TextView
                    android:id="@+id/eld_name"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/name"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/eld_id"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/id"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eld_name" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eld_name" />

                <TextView
                    android:id="@+id/carrier"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/carrier"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eld_id" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eld_id" />

                <TextView
                    android:id="@+id/truck_vin"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/truck_vin"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/carrier" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/carrier" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/truck_vin" />

                <TextView
                    android:id="@+id/rules"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/rules"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/truck_vin" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rules" />


                <TextView
                    android:id="@+id/odometer"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="odometer"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rules" />

                <View
                    android:id="@+id/view14"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:background="@color/grey"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rules" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/codriver_section"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="start|center_vertical"
                android:text="@string/co_driver_with_space"
                android:textAllCaps="true"
                android:textColor="@color/dark_mode_default_color_title"
                android:textSize="@dimen/rco_trucks_normal_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eldGroupLayout" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/coDriverLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/background_curved_default_dark_mode"
                android:elevation="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/codriver_section">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/coDriverSpinnerLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!--Setting Spinner selected text is done programmatically in SettingsFragment-->
                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/coDriverSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black_and_white"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/driver_list"
                        android:fontFamily="@font/manrope_regular"
                        android:paddingTop="@dimen/_1sdp"
                        android:paddingBottom="@dimen/_1sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/rco_trucks_medium_text_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/mapControls"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/proxima_nova_bold"
                android:gravity="start|center_vertical"
                android:text="@string/map_controls"
                android:textAllCaps="true"
                android:textColor="@color/dark_mode_default_color_title"
                android:textSize="@dimen/rco_trucks_normal_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/coDriverLayout" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mapControlsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/background_curved_default_dark_mode"
                android:elevation="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mapControls">


                <TextView
                    android:id="@+id/enableRestArea"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/rest_station"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/enableGasStation"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/gas_station"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/enableRestArea" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/enableRestArea" />

                <TextView
                    android:id="@+id/enableZoom"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/zoom"
                    android:paddingStart="12dp"
                    android:textColor="@color/black_and_white"
                    android:textColorHint="@color/black_and_white"
                    android:textSize="@dimen/rco_trucks_medium_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/enableGasStation" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/enableGasStation" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <include
        android:id="@+id/driverCoDriverLayout"
        layout="@layout/include_layout_settings_bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>